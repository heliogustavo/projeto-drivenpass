generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  email      String       @unique
  password   String
  created_at DateTime     @default(now())
  Credential Credential[]
  Network    Network[]

  @@map("users")
}

model Credential {
  id         String   @id @default(uuid())
  title      String   @db.VarChar(50)
  url        String
  username   String
  password   String
  userId     String
  created_at DateTime @default(now())
  User       User     @relation(fields: [userId], references: [id])

  @@unique([userId, title])
  @@map("credentials")
}


model Network {
  id         String   @id @default(uuid())
  title      String   @db.VarChar(50)
  network    String
  password   String
  userId     String
  created_at DateTime @default(now())
  User       User     @relation(fields: [userId], references: [id])

  @@map("networks")
}
